{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "description": "A Next.js example project using zodocs for API documentation",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "tsc": "tsc --noEmit",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:seed": "npx prisma db seed",
    "prisma:fresh": "prisma migrate reset --force && npm run prisma:generate && npm run prisma:seed",
    "prisma:studio": "npx prisma studio",
    "ci": "npm run prettier:fix && npm run eslint:fix && npm run prisma:generate && npm run prisma:format && npm run tsc && npm run docs",
    "docs": "zodocs"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "dotenv": "^17.2.3",
    "next": "^16.0.10",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "lodash": "^4.17.21",
    "npm-check-updates": "^19.2.0",
    "pg-promise": "^12.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3",
    "zod": "^4.2.1",
    "zodocs": "*"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
